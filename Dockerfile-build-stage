# Use the Debian-based base image for building the image
FROM ubuntu:latest as build

# Install the required packages
RUN apt-get update && \
    apt-get install -y kpartx

# Use the Alpine Linux base image for the final image
FROM alpine:latest

# Copy the kpartx binary from the build stage
COPY --from=build /usr/sbin/kpartx /usr/sbin/

# Set the default command
CMD ["/bin/sh"]